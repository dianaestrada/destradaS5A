        Padding="25"
        Spacing="25">
        <Label Text="Semana 5 SQLite"
               FontSize="20"
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>
        <Label Text="id"
               IsVisible="False"/>
        <Label x:Name="lblId"
               IsVisible="False"/>
        <Label Text="nombre"/>
